                                        giorni = DATEDIFF(data_fine, data_inizio)-1
                                        OR
                                        DATE_ADD(data_inizio, INTERVAL giorni DAY)>= data_fine
                                    THEN
                                        SET giorni = 0;
                                        LEAVE ciclo3;
