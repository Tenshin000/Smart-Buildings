		NEW.NumeroMassimoLavoratori < 3
        OR
        NEW.NumeroMassimoLavoratori > 15
    THEN
		SIGNAL SQLSTATE '45000'
        SET MESSAGE_TEXT = 'Impossibile aggiornare! Il Massimo Numero di Lavoratori deve essere tra 3 e 15.';
    END IF;
END $$
DELIMITER ;

