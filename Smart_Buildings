                                    AND
                                    data_inizio <= CONCAT(YEAR(data_inizio), '-01-07')
                                THEN
                                    SET giorni = giorni + 1; 
                                END IF;
                            END LOOP;
                        ELSEIF 
                            numero_randomizzazione = 3
                        THEN
                            ciclo3: LOOP
                                IF
                                    data_inizio < CONCAT(YEAR(data_inizio), '-12-21')
                                    OR
                                    data_inizio > CONCAT(YEAR(data_inizio), '-01-07')
