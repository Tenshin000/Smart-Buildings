                                        (lavoro, 'FLPMRK88L29L736B', CONCAT(DATE_ADD(data_inizio, INTERVAL giorni DAY), ' ', '14:00:00'), CONCAT(DATE_ADD(data_inizio, INTERVAL giorni DAY), ' ', '18:00:00')),
